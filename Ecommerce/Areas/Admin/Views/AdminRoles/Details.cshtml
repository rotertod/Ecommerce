@model Ecommerce.Models.Role

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <div class="container-fluid pt-4 px-4">
        <div class="rounded h-100 p-2 header-sub-title">
            <nav style="margin-bottom: 4px" class="breadcrumb breadcrumb-dash">
                <a href="~/Admin/HomeAdmin" class="breadcrumb-item"><i class="fa fa-home"></i> Home</a>
                <a href="~/Admin/AdminRoles" class="breadcrumb-item">Danh sách quyền truy cập</a>
                <span class="breadcrumb-item active">Thông tin quyền truy cập</span>
            </nav>
        </div>
    </div>
</div>

<div class="container-fluid pt-4 px-4 col-6">
    <div class="rounded h-100 p-4">
        <h6 class="mb-4">Thông tin quyền truy cập</h6>
        <div class="table-responsive">
            <table class="table">
                <tbody>
                    <tr>
                        <td>ID</td>
                        <td>@Model.RoleID</td>
                    </tr>
                    <tr>
                        <td>Tên quyền truy cập</td>
                        <td>@Model.RoleName</td>
                    </tr>
                    <tr>
                        <td>Mô tả</td>
                        <td>@Model.Description</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
