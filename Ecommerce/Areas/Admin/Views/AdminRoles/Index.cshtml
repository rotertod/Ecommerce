@model IEnumerable<Ecommerce.Models.Role>

@{
    ViewBag.Title = "Quản lý quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <div class="container-fluid pt-4 px-4">
        <div class="rounded h-100 p-2 header-sub-title">
            <nav style="margin-bottom: 4px" class="breadcrumb breadcrumb-dash">
                <a href="~/Admin/HomeAdmin" class="breadcrumb-item"><i class="fa fa-home"></i> Home</a>
                <span class="breadcrumb-item active">Danh sách quyền truy cập</span>
            </nav>
        </div>
    </div>
</div>

<div class="container-fluid pt-4 px-4">
    <div class="col-12">
        <div class="rounded h-100 p-4">
            <div class="d-flex mb-4">
                <h6 style="margin: 0">Quản lý quyền truy cập</h6>
                <a href="~/Admin/AdminRoles/Create" class="btn btn-outline-info" style="line-height: 28px; position: relative; top: -12px; left: 40px;">
                    <span style="margin-right: 6px; font-size: 20px">+</span>
                    Create
                </a>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Mô tả</th>
                            <th scope="col">#</th>
                        </tr>
                    </thead>
                    <tbody style="vertical-align: middle;">
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr style="line-height: 51px">
                                    <td scope="row">@item.RoleID</td>
                                    <td>@item.RoleName</td>
                                    <td>@item.Description</td>
                                    <td>
                                        <a class="btn btn-outline-success m-2" href="~/Admin/AdminRoles/Details/@item.RoleID">View</a>
                                        <a class="btn btn-outline-warning m-2" href="~/Admin/AdminRoles/Edit/@item.RoleID">Edit</a>
                                        <a class="btn btn-outline-danger m-2" href="~/Admin/AdminRoles/Delete/@item.RoleID">Delete</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
