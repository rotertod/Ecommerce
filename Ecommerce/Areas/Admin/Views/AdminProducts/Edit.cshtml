@model Ecommerce.Models.Product

@{
    ViewBag.Title = "Chỉnh sửa sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <div class="container-fluid pt-4 px-4">
        <div class="rounded h-100 p-2 header-sub-title">
            <nav style="margin-bottom: 4px" class="breadcrumb breadcrumb-dash">
                <a href="~/Admin/HomeAdmin" class="breadcrumb-item"><i class="fa fa-home"></i> Home</a>
                <a href="~/Admin/AdminProducts" class="breadcrumb-item">Danh sách sản phẩm</a>
                <span class="breadcrumb-item active">Chỉnh sửa sản phẩm: @Model.ProductName</span>
            </nav>
        </div>
    </div>
</div>

<div class="container-fluid pt-4 px-4 col-12">
    <div class="rounded h-100 p-4">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.ProductID)
            @Html.HiddenFor(m => m.Thumb)
            @Html.HiddenFor(m => m.DateCreated)

            <ul class="nav nav-tabs" id="myTabs">
                <li class="nav-item">
                    <a class="nav-link active" id="main-tab" data-bs-toggle="tab" href="#mainSection">Basic info</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="additional-tab" data-bs-toggle="tab" href="#additionalSection">Option info</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="description-tab" data-bs-toggle="tab" href="#descriptionSection">Description</a>
                </li>
                <li style="margin-left: auto; margin-right: 20px">
                    <div class="col-md-offset-2">
                        <button type="submit" class="btn btn-outline-info" style="line-height: 28px;">
                            <i class="fa fa-save" style="margin-right: 6px"></i>
                            Save
                        </button>
                    </div>
                </li>
            </ul>

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="tab-content mt-3">
                    <div class="tab-pane active" id="mainSection">
                        <div class="form-group mb-4 d-flex">
                            <label for="ProductName" class="control-label col-md-2" style="line-height: 38px;">Tên sản phẩm</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group mb-4 d-flex">
                            <label for="ShortDesc" class="control-label col-md-2" style="line-height: 38px;">Mô tả ngắn</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.ShortDesc, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ShortDesc, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group mb-4 d-flex">
                            <label for="CatID" class="control-label col-md-2" style="line-height: 38px;">Danh mục sản phẩm</label>
                            <div class="col-md-10">
                                @Html.DropDownList("CatID", null, htmlAttributes: new { @class = "form-control bg-dark" })
                                @Html.ValidationMessageFor(model => model.CatID, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group mb-4 d-flex">
                            <label for="Price" class="control-label col-md-2" style="line-height: 38px;">Giá</label>
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                            </div>
                            <label for="Discount" class="control-label col-md-2 text-center" style="line-height: 38px;">Discount</label>
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.Discount, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Discount, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group mb-4 d-flex">
                            <label for="ShortDesc" class="control-label col-md-2" style="line-height: 38px;">Ratting</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Ratting, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Ratting, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group mb-4 d-flex">
                            <label for="UnitslnStock" class="control-label col-md-2" style="line-height: 38px;">Hàng tồn kho</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.UnitslnStock, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UnitslnStock, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group mb-4 d-flex">
                            <label for="Thumb" class="control-label col-md-2" style="line-height: 38px;">Ảnh đại diện</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Thumb, new { htmlAttributes = new { @class = "form-control bg-dark", @type = "file" } })
                                @Html.ValidationMessageFor(model => model.Thumb, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group mb-4 d-flex">
                            <label for="Video" class="control-label col-md-2" style="line-height: 38px;">Video</label>
                            <div class="col-md-10" style="line-height: 38px">
                                @Html.EditorFor(model => model.Video, new { htmlAttributes = new { @class = "form-control bg-dark", @type = "file" } })
                                @Html.ValidationMessageFor(model => model.Video, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group mb-4 d-flex">
                            <label for="BestSellers" class="control-label col-md-2" style="line-height: 38px;">Best Sellers</label>
                            <div class="col-md-10" style="line-height: 38px">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.BestSellers)
                                    @Html.ValidationMessageFor(model => model.BestSellers, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-4 d-flex">
                            <label for="HomeFlag" class="control-label col-md-2" style="line-height: 38px;">Home Flag</label>
                            <div class="col-md-10" style="line-height: 38px">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.HomeFlag)
                                    @Html.ValidationMessageFor(model => model.HomeFlag, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-4 d-flex">
                            <label for="Active" class="control-label col-md-2" style="line-height: 38px;">Public</label>
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.Active)
                                    @Html.ValidationMessageFor(model => model.Active, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-4 d-flex">
                            <label for="Tags" class="control-label col-md-2" style="line-height: 38px;">Tag</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Tags, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Tags, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div id="additionalSection" class="tab-pane">
                        <div class="form-group mb-4 d-flex">
                            <label for="Title" class="control-label col-md-2" style="line-height: 38px;">Tiêu đề</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group mb-4 d-flex">
                            <label for="Alias" class="control-label col-md-2" style="line-height: 38px;">Alias</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Alias, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Alias, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group mb-4 d-flex">
                            <label for="MetaDesc" class="control-label col-md-2" style="line-height: 38px;">Meta Desc</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.MetaDesc, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.MetaDesc, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group mb-4 d-flex">
                            <label for="MetaKey" class="control-label col-md-2" style="line-height: 38px;">Meta Key</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.MetaKey, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.MetaKey, "", new { @class = "text-danger" })
                            </div>
                        </div>


                    </div>
                    <div id="descriptionSection" class="tab-pane">
                        <div class="form-group mb-4 d-flex justify-content-center">
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @id = "Description" } })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>

<style>
    /* Thay đổi kích thước của checkbox */
    .checkbox input[type="checkbox"] {
        transform: scale(1.5);
    }
</style>

<!-- Include TinyMCE library -->
<script src="https://cdn.tiny.cloud/1/eti2f6lgnprkg0ded5bienek85ph74230i0s35evtymjnkqy/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>

<!-- Initialize TinyMCE -->
<script>
    tinymce.init({
        selector: '#Description',  // Replace 'Description' with the actual ID of your description textarea
        height: 300,
        plugins: [
            'advlist autolink lists link image charmap print preview anchor',
            'searchreplace visualblocks code fullscreen',
            'insertdatetime media table paste code help wordcount'
        ],
        toolbar: 'undo redo | formatselect | bold italic underline backcolor | \
            alignleft aligncenter alignright alignjustify | \
            bullist numlist outdent indent | removeformat | help'
    });
</script>

